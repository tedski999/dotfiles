#!/bin/bash

options=( "auto-detect" "force mobile" "force docked" "mirror desktop" )
response=$(printf "%s\n" "${options[@]}" | rofi \
	-theme-str 'window {width:200;} listview {scrollbar:false;} inputbar {children:[prompt];}' \
	-l 4 -dmenu -no-sidebar-mode -no-custom -p "Screen Options")
case $response in
	"${options[0]}") autorandr --force --change ;;
	"${options[1]}") autorandr --load mobile ;;
	"${options[2]}") autorandr --load docked ;;
	"${options[3]}") xrandr --output HDMI-1-0 --auto --same-as eDP1
esac

