#!/usr/bin/env fish

# Dotfile installer and manager
# Dependencies: git

function doc
	echo "TODO: check integrity of dotfiles"
	# up-to-date with remote
	# running expected programs
end

function init
	echo "TODO: setup dotfiles based on user choices"
	# type: workstation / server / minimal
	# os: archlinux / raspberry pi / termux
end

switch $argv[1]
	case "" "doc"; doc
	case "init"; init
	case "*"; git --git-dir=$HOME/.local/dots/ --work-tree=$HOME $argv
end
