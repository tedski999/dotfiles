#!/bin/bash

# Notify user when a display is connected or disconnected

notification_id=$RANDOM

udevadm monitor --udev --subsystem-match drm | while read event; do
	if [[ "$(cat /sys/class/drm/card1-HDMI-A-3/status)" == "connected" ]]; then
		notify-send --icon "computer" --replace-id "$notification_id" "External HDMI Display Detected" "Ready to connect..."
	else
		notify-send --icon "computer-laptop" --replace-id "$notification_id" "No External HDMI Display Detected" "Only using laptop display"
	fi
done
