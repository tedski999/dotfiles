#!/bin/bash

ordinal() {
	case "$1" in
		*1[0-9] | *[04-9]) echo "$1"th ;;
		*1) echo "$1"st ;;
		*2) echo "$1"nd ;;
		*3) echo "$1"rd ;;
	esac
}

currentDay=$(date "+%j")
daysInYear=$(date -d "Dec 31" "+%j")
percentComplete=$(bc <<< "scale=2; 100 * $currentDay / $daysInYear")
title=$(date "+%T %Z - %A the $(ordinal "$(date "+%-d")") of %B, %Y")
body=$(date "+Day %j, Week %W, $percentComplete%% complete")
dunstify -i "clock" "$title" "$body"
