#!/bin/bash

if [ "$1" == "toggle" ]; then
	pactl set-sink-mute @DEFAULT_SINK@ toggle
else
	pactl set-sink-volume @DEFAULT_SINK@ "$1"
fi

if [ "$(pulsemixer --get-mute)" -eq 1 ]; then
	message="Muted :("
	icon="audio-volume-muted"
else
	volume="$(pulsemixer --get-volume | awk '{print $1 }' )"
	icon="audio-volume-low"
	if [ $volume -gt 66 ]; then
		icon="audio-volume-high"
	elif [ $volume -gt 33 ]; then
		icon="audio-volume-medium"
	fi

	message="$(printf %-5s $color $volume%)"
	for i in {0..99..4}; do [ $volume -gt $i ] && message=$message"â–†"; done
	[ $volume -ge 99 ] && message="<span foreground='#C06060'>$message</span>"
fi

dunstify -u "low" -i "$icon" -r "919231" "Volume" "$message"

