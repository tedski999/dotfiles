#!/bin/bash

options=(
	"emacs" "nvim" "fish" "i3" "xinitrc"
	"picom" "polybar" "alacritty"
	"rofi" "dunst" "ssh"
	"~/.local/bin" "/usr/local/bin"
)

response=$(printf "%s\n" "${options[@]}" | rofi -l 10 -dmenu -no-custom -p "Edit Config")
case $response in
	"${options[0]}")  $VISUAL $HOME/.config/emacs/init.el ;;
	"${options[1]}")  $VISUAL $HOME/.config/nvim/init.vim ;;
	"${options[2]}")  $VISUAL $HOME/.config/fish/ ;;
	"${options[3]}")  $VISUAL $HOME/.config/i3/config ;;
	"${options[4]}")  $VISUAL $HOME/.xinitrc ;;
	"${options[5]}")  $VISUAL $HOME/.config/picom/picom.conf ;;
	"${options[6]}")  $VISUAL $HOME/.config/polybar/config ;;
	"${options[7]}")  $VISUAL $HOME/.config/alacritty/alacritty.yml ;;
	"${options[8]}")  $VISUAL $HOME/.config/rofi/config.rasi ;;
	"${options[9]}")  $VISUAL $HOME/.config/dunst/dunstrc ;;
	"${options[10]}") $VISUAL $HOME/.ssh/config ;;
	"${options[11]}") $VISUAL $HOME/.local/bin/ ;;
	"${options[12]}") $VISUAL /usr/local/bin/ ;;
esac

