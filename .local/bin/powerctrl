#!/usr/bin/fish

# Prompt user with system power control settings
# Dependencies: slock bspc

set choices "lock
suspend
hibernate
logout
reboot
shutdown"

test $argv[1]
and set choice $argv[1]
or set choice (choose -c $choices -p "‚èº Power Ctrl" -u "3,4,5")

switch $choice
	case "lock"; slock
	case "suspend"; systemctl suspend
	case "hibernate"; systemctl hibernate
	case "logout"; bspc quit
	case "reboot"; systemctl reboot
	case "shutdown"; systemctl poweroff
	case "*"; exit 1
end
