#!/bin/bash

options=( "lock" "suspend" "restart i3" "logout" "reboot" "shutdown" )

response=$(printf "%s\n" "${options[@]}" | rofi \
	-theme-str 'window {width:200;} listview {scrollbar:false;} inputbar {children:[prompt];}' \
	-l 6 -dmenu -no-custom -u 3,4,5 -p "Power Control")
case $response in
	"${options[0]}") slock ;;
	"${options[1]}") systemctl suspend ;;
	"${options[2]}") i3-msg restart ;;
	"${options[3]}") i3-msg exit ;;
	"${options[4]}") systemctl reboot ;;
	"${options[5]}") systemctl poweroff ;;
esac

