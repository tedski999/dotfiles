[module/netspeed]
type = internal/network
interface = wlo1
interval = 0.5
accumulate-stats = true

label-connected = %{A1:netspeedtest &:}%upspeed:8:% %downspeed:8:%%{A}
label-connected-padding = 1
label-connected-background = ${colors.bg}


[module/wifi]
type = internal/network
interface = wlo1
interval = 2

format-connected = %{A1:$TERMINAL -e nmtui &:}<label-connected><ramp-signal>%{A}
format-disconnected = %{A1:$TERMINAL -e nmtui &:}<label-disconnected>%{A}

label-connected = %essid%
label-connected-background = ${colors.bg}
label-connected-padding = 1

label-disconnected = 
label-disconnected-foreground = ${colors.fg_urgent}
label-disconnected-background = ${colors.bg}
label-disconnected-padding = 1

ramp-signal-background = ${colors.bg}
ramp-signal-padding = 1
