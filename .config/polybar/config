[module/netspeed]
type = internal/network
interface = wlo1
interval = 0.5
accumulate-stats = true

format-connected-padding = 0
format-connected-margin = 1

label-connected = %{A1:mman notif netspeed &:}%upspeed:8:% %downspeed:8:%%{A}
label-connected-padding = ${config.padding}
label-connected-background = ${config.bg}


[module/wifi]
type = internal/network
interface = wlo1
interval = 2

format-connected = %{A1:$TERMINAL -e nmtui &:}<label-connected><ramp-signal>%{A}
format-connected-padding = 0
format-connected-margin = 0
format-disconnected = %{A1:$TERMINAL -e nmtui &:}<label-disconnected>%{A}
format-disconnected-padding = 0
format-disconnected-margin = 0

label-connected = %essid%
label-connected-background = ${config.bg}
label-connected-padding = ${config.padding}

label-disconnected = 
label-disconnected-foreground = ${config.fg_urgent}
label-disconnected-background = ${config.bg}
label-disconnected-padding = ${config.padding}

ramp-signal-background = ${config.bg}
ramp-signal-padding = ${config.padding}
ramp-signal-0 = 
ramp-signal-0-foreground = ${config.fg_urgent}
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 


[module/pulseaudio]
type = internal/pulseaudio
click-right = $TERMINAL -e pulsemixer

format-volume = <label-volume><ramp-volume>
format-volume-padding = 0
format-muted = mute <label-muted>

label-volume = %percentage:4:4%%

label-muted = 
label-muted-foreground = ${config.fg_urgent}

ramp-muted-background = ${config.bg}
ramp-muted-padding = ${config.padding}

ramp-volume-background = ${config.bg}
ramp-volume-padding = ${config.padding}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 


[module/battery]
type = internal/battery
full-at = 98

format-charging = %{A1:powercontrol &:}%{A3:mman notif battery &:}%{A4:xbacklight -dec 10 -time 0 &:}%{A5:xbacklight -inc 10 -time 0 &:}<label-charging> <animation-charging>%{A}%{A}%{A}%{A}
format-charging-margin = 1
format-discharging = %{A1:powercontrol &:}%{A3:mman notif battery &:}%{A4:xbacklight -dec 10 -time 0 &:}%{A5:xbacklight -inc 10 -time 0 &:}<label-discharging> <ramp-capacity>%{A}%{A}%{A}%{A}
format-discharging-margin = 1
format-full = %{A1:powercontrol &:}%{A3:mman notif battery &:}%{A5:xbacklight -dec 10 -time 0 &:}%{A4:xbacklight -inc 10 -time 0 &:}<label-full> <ramp-capacity>%{A}%{A}%{A}%{A}
format-full-margin = 1

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${config.fg_urgent}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${config.fg_urgent}
ramp-capacity-2 = 
ramp-capacity-2-foreground = ${config.fg_urgent}
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 

animation-charging-framerate = 750
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 


[module/updates_ipc]
type = custom/ipc
hook-0 = ~/.config/polybar/modules/updates.sh &
click-left = $TERMINAL -e paru && polybar-msg hook updates 1
format-margin = 1


[module/updates]
type = custom/script
exec = polybar-msg hook updates_ipc 1
interval = 600
label =


[module/mpris]
type = custom/script
exec = ~/.config/polybar/modules/mpris.sh
interval = 1
click-left = playerctl previous &
click-right = playerctl next &
click-middle = playerctl play-pause &
