[config]
bg = #000000
fg = #d8d8d8
bg_highlight = #222222
fg_highlight = #ffffff
bg_urgent = #bd2c40
fg_urgent = #d80000
low_ramp = #55aa55
mid_ramp = #f5a70a
high_ramp = #ff5555
padding = 1

[settings]
format-foreground = ${config.fg}
format-background = ${config.bg}
format-padding = ${config.padding}

[bar/core]
monitor = ${env:MONITOR:}
monitor-strict = true
override-redirect = true
enable-ipc = true
cursor-click = pointer
padding = ${config.padding}
offset-y = 10
height = 30
line-size = 1
background = #00000000
font-0 = Terminus:pixelsize=14;2
font-1 = Siji:pixelsize=10;2
font-2 = unifont:pixelsize=10;2


[bar/main]
inherit = bar/core
modules-left = i3 xwindow
modules-right = updates updates_ipc wifi netspeed cpu memory pulseaudio battery datetime

[bar/secondary]
inherit = bar/core
modules-left = i3
width = 25%


[bar/media]
inherit = bar/core
modules-right = mpris
width = 50%
offset-x = 50%
offset-y = 50


[module/i3]
type = internal/i3
index-sort = true
pin-workspaces=true

format = <label-state><label-mode>
format-padding = 0

label-mode-foreground = ${config.bg}
label-mode-background = ${config.fg}
label-mode-padding = ${config.padding}

label-focused = %index%
label-focused-foreground = ${config.fg_highlight}
label-focused-background = ${config.bg_highlight}
label-focused-padding = ${config.padding}

label-urgent = %index%
label-urgent-foreground = ${config.fg_urgent}
label-urgent-background = ${config.bg_urgent}
label-urgent-padding = ${config.padding}

label-unfocused = %index%
label-unfocused-foreground = ${config.fg}
label-unfocused-background = ${config.bg}
label-unfocused-padding = ${config.padding}

label-visible = %index%
label-visible-foreground = ${config.fg}
label-visible-background = ${config.bg}
label-visible-padding = ${config.padding}


[module/xwindow]
type = internal/xwindow

format-margin = 1

label = %title:0:120:...%
label-foreground = ${config.fg}
label-background = ${config.bg}
label-padding = ${config.padding}


[module/datetime]
type = internal/date
interval = 5
time = %H:%M
date-alt = %d/%m

format-padding = 0
format-margin = 0

label = %{A3:mman notif datetime &:}%time%%date% %{A}
label-foreground = ${config.fg}
label-background = ${config.bg}
label-padding = ${config.padding}


