[colors]
bg = #000000
fg = #d8d8d8
bg_highlight = #222222
fg_highlight = #ffffff
bg_urgent = #bd2c40
fg_urgent = #d80000


[settings]
screenchange-reload = true


[bar/core]
monitor = ${env:MONITOR:}
monitor-strict = true
override-redirect = true
enable-ipc = true
padding = 1
module-margin = 1
offset-y = 10
height = 30
line-size = 1
background = #00
font-0 = Terminus:pixelsize=14;2
font-1 = Siji:pixelsize=10;2
font-2 = unifont:pixelsize=10;2


[bar/hud]
inherit = bar/core
modules-left = i3 xwindow
modules-right = datetime


[bar/stats]
inherit = bar/core
modules-right = wifi netspeed memory cpu pulseaudio battery
offset-x = -90


[module/i3]
type = internal/i3
index-sort = true

format = <label-state><label-mode>

label-mode-foreground = ${colors.bg}
label-mode-background = ${colors.fg}
label-mode-padding = 1

label-focused = %index%
label-focused-foreground = ${colors.fg_highlight}
label-focused-background = ${colors.bg_highlight}
label-focused-padding = 1

label-urgent = %index%
label-urgent-foreground = ${colors.fg_urgent}
label-urgent-background = ${colors.bg_urgent}
label-urgent-padding = 1

label-unfocused = %index%
label-unfocused-foreground = ${colors.fg}
label-unfocused-background = ${colors.bg}
label-unfocused-padding = 1

label-visible = %index%
label-visible-foreground = ${colors.fg}
label-visible-background = ${colors.bg}
label-visible-padding = 1


[module/xwindow]
type = internal/xwindow

label = %{A2:i3-msg kill:}%title:0:120:...%%{A}
label-foreground = ${colors.fg}
label-background = ${colors.bg}
label-padding = 1


[module/datetime]
type = internal/date
interval = 5
time = %H:%M
date-alt = %d/%m

label = %{A3:datetimenotification:}%time%%date% %{A}
label-foreground = ${colors.fg}
label-background = ${colors.bg}
label-padding = 1


