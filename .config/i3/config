
set $mod Mod4
floating_modifier $mod

# startup programs
exec_always --no-startup-id alternating_layouts.py

# mouse control
mouse_warping none
focus_follows_mouse no
bindsym --whole-window $mod+Control+button1 floating toggle
bindsym --whole-window $mod+Control+button3 fullscreen toggle
bindsym --whole-window $mod+Shift+button2 kill

# window keybindings
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left 25 px
bindsym $mod+Shift+j move down 25 px
bindsym $mod+Shift+k move up 25 px
bindsym $mod+Shift+l move right 25 px
bindsym $mod+Control+h resize shrink width 25 px
bindsym $mod+Control+j resize grow height 25 px
bindsym $mod+Control+k resize shrink height 25 px
bindsym $mod+Control+l resize grow width 25 px
bindsym $mod+Shift+period move to workspace next_on_output
bindsym $mod+Shift+comma  move to workspace prev_on_output
bindsym $mod+Mod1+space exec --no-startup-id flash_window
bindsym $mod+f focus mode_toggle
bindsym $mod+Shift+f floating toggle
bindsym $mod+Shift+m fullscreen toggle
bindsym $mod+Shift+q kill

# functional keys keybindings
bindsym XF86AudioRaiseVolume        exec --no-startup-id mman volume "+2%"
bindsym XF86AudioLowerVolume        exec --no-startup-id mman volume "-2%"
bindsym Shift+XF86AudioRaiseVolume  exec --no-startup-id mman volume "+25%"
bindsym Shift+XF86AudioLowerVolume  exec --no-startup-id mman volume "-25%"
bindsym XF86AudioMute               exec --no-startup-id mman volume "toggle"
bindsym XF86AudioPrev               exec --no-startup-id mman media "previous"
bindsym XF86AudioNext               exec --no-startup-id mman media "next"
bindsym XF86AudioPlay               exec --no-startup-id mman media "play-pause"
bindsym XF86MonBrightnessDown       exec --no-startup-id mman brightness "-5"
bindsym XF86MonBrightnessUp         exec --no-startup-id mman brightness "+5"
bindsym Shift+XF86MonBrightnessDown exec --no-startup-id mman brightness "-25"
bindsym Shift+XF86MonBrightnessUp   exec --no-startup-id mman brightness "+25"
bindsym XF86Search                  exec --no-startup-id mman launcher
bindsym Shift+XF86Search            exec --no-startup-id brave

# system keybindings
bindsym --release $mod+Shift+Escape   exec --no-startup-id mman power "lock"
bindsym --release $mod+Control+Escape exec --no-startup-id mman power "suspend"
bindsym $mod+Control+Shift+Escape     exec --no-startup-id mman power "restart i3"
bindsym $mod+Escape                   exec --no-startup-id mman power
bindsym Mod1+Escape                   exec --no-startup-id mman notif control close
bindsym Mod1+Shift+Escape             exec --no-startup-id mman notif control close-all
bindsym Mod1+grave                    exec --no-startup-id mman notif control history-pop
bindsym Mod1+Shift+grave              exec --no-startup-id mman notif control context

# app shortcuts
bindsym $mod+Return  exec --no-startup-id mman terminal
bindsym $mod+s       exec --no-startup-id mman screenshot select
bindsym $mod+Shift+s exec --no-startup-id mman screenshot display
bindsym $mod+v       exec --no-startup-id clipmenu
bindsym $mod+space mode "Launch App"
mode "Launch App" {
	bindsym space  exec --no-startup-id mman launcher; mode "default"
	bindsym Return exec --no-startup-id mman terminal; mode "default"
	bindsym e      exec --no-startup-id mman edit; mode "default"
	bindsym s      exec --no-startup-id mman screen; mode "default"
	bindsym w      exec --no-startup-id brave; mode "default"
	bindsym d      exec --no-startup-id discord; mode "default"
	bindsym m      exec --no-startup-id youtube-music; mode "default"
	bindsym c      exec --no-startup-id mman terminal "bc"; mode "default"
	bindsym b      exec --no-startup-id mman terminal "bluetoothctl"; mode "default"
	bindsym n      exec --no-startup-id mman terminal "newsboat"; mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+b mode "Polybar"
mode "Polybar" {
	bindsym t exec --no-startup-id polybar-msg action "#datetime.toggle"
	bindsym d exec --no-startup-id polybar notif datetime; mode "default"
	bindsym c exec --no-startup-id polybar notif calendar; mode "default"
	bindsym b exec --no-startup-id polybar notif battery; mode "default"
	bindsym m exec --no-startup-id polybar-msg action "#pulseaudio.toggle"
	bindsym n exec --no-startup-id mman terminal "nmtui"; mode "default"
	bindsym s exec --no-startup-id mman notif netspeed; mode "default"
	bindsym u exec --no-startup-id mman terminal "paru"; mode "default"
	bindsym p exec --no-startup-id mman terminal "bashtop"; mode "default"
	bindsym Escape mode "default"
}

# windows
font DinaTTF 10
default_border pixel 0
client.focused          #585858 #585858 #d8d8d8 #585858 #585858
client.focused_inactive #181818 #181818 #585858 #181818 #181818
client.unfocused        #181818 #181818 #585858 #181818 #181818
client.urgent           #ab4642 #ab4642 #d8d8d8 #ab4642 #ab4642
client.placeholder      #000000 #000000 #000000 #000000 #000000
client.background       #000000

# workspaces
bindsym $mod+period workspace next_on_output
bindsym $mod+comma  workspace prev_on_output
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+x move workspace to output right
bindsym $mod+Shift+x move workspace to output right; focus output left
bindsym $mod+z exec --no-startup-id mman wm gotoempty
bindsym $mod+Shift+z exec --no-startup-id mman wm movetoempty
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+Shift+1 move container to workspace number 1; workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2; workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3; workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4; workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5; workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6; workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7; workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8; workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9; workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10; workspace number 10
